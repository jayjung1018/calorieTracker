<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter nutrition values per serving size."
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Name (Required)"
            android:textAlignment="center"
            android:inputType="text"/>

        <EditText
            android:id="@+id/calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calories (Required)"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/fats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fat (g)"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/carbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Carbohydrates (g)"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/proteins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Protein (g)"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/servingSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Serving Size (Required)"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Notes"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type" />

        <CheckBox
            android:id="@+id/favoriteCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Add To Favorites"
            android:onClick="onCheckboxClicked"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:onClick="onConfirmButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Cancel"
                android:onClick="onCancelButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Picture"
                android:onClick="onPictureButtonClick"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>
